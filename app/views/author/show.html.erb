<% default_title 'Нашлось: ' + @authors.size.to_s %>
<h1>Книги</h1>

<div>
  <%@authors.each do |author|%>
    <div>
      <a href="<%=author_path author%>">
        <span><%=author.surname%> <%=author.given_name.first%>. <%=author.patronymic%>.</span>
      </a>
    </div>
  <%end%>
</div>